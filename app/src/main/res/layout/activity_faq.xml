<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="CLICK HERE TO WATCH OUR TUTORIAL VIDEO"
                android:textColor="#f27f22"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Touch the white arrow to read our response."
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="HOW TO USE"
                android:textColor="#f27f22"
                android:textSize="20dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imgview_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;What is a 360° virtual reality tour?"
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl1"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Unlike traditional flat screen video, 360 degree video allows you to control the camera’s vantage point. You can look all around in a full sphere. Click here for more information - PC World"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgview_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;How do I watch a 360° virtual reality tour?"
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl2"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="There is a tutorial video on your account page when you sign up for your free membership."
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgview_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;What device should I use?"
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl3"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="The Octagon Project has been optimized for use with nearly every device that can connect to the Internet. For a full list of all compatible devices and known issues (if any) click here - KRPano"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgview_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;What web browser should I use?"
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl4"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="For most devices, you should use Google Chrome. For all Apple iOS users, you should use Safari. For all PC-connected HMD’s we recommend Firefox Nightly or Chromium Webvr Build, depending on what kind of computer and head mount display you are using."
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgview_arrow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/imgview_arrow5"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;Should I use headphones?"
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl5"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Yes. This will give you the most immersive experience. The Octagon Project is loaded with expertly scripted narration, beautiful music, and live audio from all of our locations."
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rl6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imgview_arrow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/imgview_arrow6"
                        android:text="&#160;&#160;&#160;&#160;&#160;&#160;Device Compatibility."
                        android:textColor="#F0B97C"
                        android:textSize="16dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtview_rl6"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="The Octagon Project was developed using the KRPano virtual tour platform. For a full list of compatible devices, and all known issues with the player, click here - KRPano. For more information about webVR technology, compatibility lists, and upcoming advancements click here - Is Web VR Ready
    A2: Internet connection speed is important when playing any 360° virtual reality tour. The Octagon Project should work on any connection speed higher than 5mb/s. This is approximately the average speed of a 4G/LTE Internet connection. We recommend a connection of 12mb/s or higher for the best experience. To test your Internet speed click here - Test My Speed"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PASSWORDS AND SECURITY"
                        android:textColor="#f27f22"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:id="@+id/rl1_pands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgview_arrow1__pands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/arrow" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="&#160;&#160;&#160;&#160;&#160;&#160;Is my account information protected?"

                            android:textColor="#F0B97C"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtview_rl1_pands"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="Yes. The Octagon Project uses the most current and robust security measures. Learn more about these rules here - Internet Privacy"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl2_pands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgview_arrow2_pands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#160;&#160;&#160;&#160;&#160;&#160;Can I share my account login credentials (username and password) with others?"
                            android:textColor="#F0B97C"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtview_rl2_pands"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="No. This is not recommended. You could lose access to your own account. First, our system will only allow two devices to access your account simltaneously. Secondly (and this is important), to access your account from a second device, you may have to kill/quit the browser (not just close it) on the device you were using during your previous login. Also, if you are logging in using a unique Octagon Project username and password, you are only allowed to access your account with a total of five different IP addresses within a 30-day period. Lastly, please keep your testimony honorable by not sharing passwords."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl3_pands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgview_arrow3_pands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/arrow" />

                        <TextView

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="&#160;&#160;&#160;&#160;&#160;&#160;Why am I getting a warning that says “Warning: Only two devices are allowed to access an account at any given moment...?"

                            android:textColor="#F0B97C"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtview_rl3_pands"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="We only allow two users to access an account at any given moment. Either a third person is currently accessing this account, or the browser that was previously used to access the account was not killed/quit. In order for you to access this account, the browser that was previously used to access it may have to be killed/quit, not just closed."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl4_pands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgview_arrow4_pands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/arrow" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:text="&#160;&#160;&#160;&#160;&#160;&#160;Why has my account been logged out?"

                            android:textColor="#F0B97C"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtview_rl4_pands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="40dp"
                        android:paddingBottom="5dp"
                        android:text="If your account has been inactive for over 20 minutes, it will automatically log you out."
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
